<resources>
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="postSplashScreenTheme">@style/Theme.AppCompat.Light.NoActionBar</item>
    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryVariant">@color/colorMain</item>
        <item name="colorOnPrimary">@color/colorCommon</item>
        <item name="colorAccent">@color/colorMain</item>
        <item name="fontFamily">@font/my_font</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="fontNormal">
        <item name="fontFamily">@font/my_font</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="fontMedium">
        <item name="fontFamily">@font/my_font_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="fontSemiBold">
        <item name="fontFamily">@font/my_font_semibold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="fontBold">
        <item name="fontFamily">@font/my_font_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>


    <style name="NormalDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimationNormal</item>
    </style>

    <style name="DialogAnimationNormal">
        <item name="android:windowEnterAnimation">@anim/pop_lay_show</item>
        <item name="android:windowExitAnimation">@anim/pop_lay_hide</item>
    </style>

    <style name="txtNormalButton" parent="fontNormal">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:backgroundTint">@color/colorMain</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="txtCancelButton" parent="fontNormal">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="strokeColor">@color/colorLight</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="android:backgroundTint">@color/colorWhite</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CircleShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="tabTextStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:fontFamily">@font/my_font_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

</resources>